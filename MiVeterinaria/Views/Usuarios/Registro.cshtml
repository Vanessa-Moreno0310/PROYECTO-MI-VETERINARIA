@model MiVeterinaria.Models.UsuarioDb

@{
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html>
<head>
    <title>Registro</title>
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
</head>
<body>
    <br />
    <br />
    <div class="row">
        <div class="animate__animated animate__backInRight col-md-8 offset-2">
            <div class="card-body">
                <section>
                    <form id="account">
                        <div class="card-header">
                            <h3>  <strong>Crear Cuenta</strong> </h3>
                        </div>
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <input placeholder="Nombre" id="Nombre" type="text" maxlength="100" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input placeholder="Apellido" id="Apellido" type="text" maxlength="100" class="form-control" />
                        </div>
                        <div class="form-group">
                            <select id="TipoDoc" class="form-control">
                                <option value="" disabled selected>Seleccione el Tipo de Documento</option>
                                <option value="Cédula de Ciudadanía">Cédula de Ciudadanía</option>
                                <option value="Tarjeta de Identidad">Tarjeta de Identidad</option>
                                <option value="NIT">NIT</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input placeholder="Numero Documento" id="NumeroDoc" type="text" maxlength="100" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input placeholder="Nombre Usuario" id="NombreUsuario" type="text" maxlength="200" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input placeholder="Contraseña" id="Contraseña" type="password" maxlength="200" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input placeholder="Confirmar Contraseña" id="ConfirmarContraseña" type="password" maxlength="100" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input placeholder="Telefono" id="Telefono" type="text" maxlength="100" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="button" value="Registrarse" class="btn btn-primary" onclick="crearUsuario()" /> |

                            <a href="@Url.Action("Index", "Account")" class="btn btn-info">Acceder</a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>